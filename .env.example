# Team Claude Development Environment Variables
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# ==============================================================================
# Anthropic API Key (Required for Claude Code)
# ==============================================================================
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# ==============================================================================
# GitHub Integration (for GitHub MCP Server)
# ==============================================================================
# Create a Personal Access Token: https://github.com/settings/tokens
# Required scopes: repo, workflow, read:org
GITHUB_TOKEN=
GITHUB_OWNER=your-org-or-username
GITHUB_REPO=your-repo-name

# ==============================================================================
# Linear Integration (for Linear MCP Server)
# ==============================================================================
# Get API key from: https://linear.app/settings/api
LINEAR_API_KEY=
LINEAR_TEAM_ID=

# ==============================================================================
# Slack Integration (for Slack MCP Server)
# ==============================================================================
# Create Slack App: https://api.slack.com/apps
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_TEAM_ID=T1234567890
SLACK_CHANNEL_ID=#engineering

# ==============================================================================
# Sentry (Error Tracking)
# ==============================================================================
# Get from: https://sentry.io/settings/
SENTRY_TOKEN=
SENTRY_ORG=your-org
SENTRY_PROJECT=your-project
SENTRY_DSN=

# ==============================================================================
# Google Services (for Google Drive MCP Server)
# ==============================================================================
# Create OAuth credentials: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REFRESH_TOKEN=

# Google Drive folder ID (optional)
GOOGLE_DRIVE_FOLDER_ID=

# ==============================================================================
# Notion Integration (for Notion MCP Server)
# ==============================================================================
# Get integration token: https://www.notion.so/my-integrations
NOTION_API_KEY=
NOTION_DATABASE_ID=

# ==============================================================================
# OpenAI (if using additional AI services)
# ==============================================================================
OPENAI_API_KEY=
OPENAI_ORG_ID=

# ==============================================================================
# AWS Configuration (if deploying to AWS)
# ==============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_BUCKET_NAME=

# ==============================================================================
# Vercel (if deploying to Vercel)
# ==============================================================================
VERCEL_TOKEN=
VERCEL_ORG_ID=
VERCEL_PROJECT_ID=

# ==============================================================================
# CI/CD Configuration
# ==============================================================================
# CI environment indicator
CI=false

# ==============================================================================
# Application Configuration
# ==============================================================================
# Environment: development, staging, production
NODE_ENV=development

# Application port
PORT=3000

# Application URL
APP_URL=http://localhost:3000

# ==============================================================================
# Security & Authentication
# ==============================================================================
# JWT secret for authentication (generate a strong random string)
# Example: openssl rand -base64 32
JWT_SECRET=

# Session secret
SESSION_SECRET=

# Cookie secret
COOKIE_SECRET=

# ==============================================================================
# Feature Flags
# ==============================================================================
# Enable/disable features
FEATURE_AUTH=true
FEATURE_ANALYTICS=true
FEATURE_NOTIFICATIONS=true

# ==============================================================================
# Custom MCP Servers
# ==============================================================================
# Add your custom MCP server environment variables here
# CUSTOM_MCP_API_KEY=
# CUSTOM_MCP_ENDPOINT=

# ==============================================================================
# Development Tools
# ==============================================================================
# Enable debug logging
DEBUG=false

# Log level: error, warn, info, debug, trace
LOG_LEVEL=info

# Enable source maps
ENABLE_SOURCE_MAPS=true

# ==============================================================================
# Email Configuration (if using email features)
# ==============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=noreply@example.com

# ==============================================================================
# Analytics & Monitoring
# ==============================================================================
# Google Analytics
GA_TRACKING_ID=

# PostHog (product analytics)
POSTHOG_API_KEY=
POSTHOG_HOST=https://app.posthog.com

# DataDog (monitoring)
DATADOG_API_KEY=
DATADOG_APP_KEY=

# ==============================================================================
# Payment Processing (if using Stripe, etc.)
# ==============================================================================
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ==============================================================================
# Notes
# ==============================================================================
# 1. Never commit .env to version control
# 2. Keep .env.example up to date when adding new variables
# 3. Use strong, unique values for secrets
# 4. Rotate credentials regularly
# 5. Use different credentials for development/staging/production
# 6. Document the purpose of each variable
# 7. Use a password manager for team credential sharing
# ==============================================================================
